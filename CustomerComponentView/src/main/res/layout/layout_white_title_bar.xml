<?xml version="1.0" encoding="utf-8"?>
<merge  xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/layout_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/layout_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/ic_left_arrow" />

        <TextView
            android:id="@+id/layout_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:textColor="#454a5e"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/layout_iv_more"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:src="@mipmap/ic_more" />

        <ImageView
            android:id="@+id/layout_iv_share"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignEnd="@id/layout_iv_more"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:padding="5dp"
            android:src="@mipmap/ic_share_icon" />
    </RelativeLayout>
    <View
        android:id="@+id/layout_view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5" />
</merge>